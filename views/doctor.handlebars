<main class="content">

	<table id="doctor-table" align="center">
		<thead>
			<th>ID</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Clinic ID</th>
		<thead>
		<tbody>
			{{#each doctorArray}}
				
				<tr class="doctor-row">
					<td>{{id}}</td>
					<td>{{fname}}</td>
					<td>{{lname}}</td>
					<td>{{cid}}</td>
				</tr>
				
			{{/each}}
		</tbody>
	</table>
	
	
	<div align = "center">
		<button type="button"><a href="new_doctor.html"></a>New Doctor</button>
		<button type="button"><a href="del_doctor.html"></a>Delete Doctor</button>
		<button type="button"><a href="edit_doctor.html"></a>Edit Doctor</button>
	</div>
	  
	<form action=".html" method="post">
		<fieldset align = "center">
			
			<label>Input ID for Doctor's patients: <input type="number" name="numerical_input"></label>
			<br />
			<input type="submit" value = "submit">
			
		</fieldset>
	</form>
	
	<form action=".html" method="post">
		<fieldset align = "center">
			
			<label>Input ID for Prescribed Medications: <input type="number" name="numerical_input"></label>
			<br />
			<input type="submit" value = "submit">
			
		</fieldset>
	</form>
	
</main>