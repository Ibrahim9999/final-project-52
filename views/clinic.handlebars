<main class="content">

	<table id="clinic-table" align="center">
		<thead>
			<th>ID</th>
			<th>Name</th>
			<th>Address</th>
			<th>City</th>
			<th>State</th>
			<th>Zip</th>
		<thead>
		<tbody>
			{{#each clinicArray}}
				
				<tr class="clinic-row">
					<td>{{id}}</td>
					<td>{{name}}</td>
					<td>{{address}}</td>
					<td>{{city}}</td>
					<td>{{state}}</td>
					<td>{{zip}}</td>
				</tr>
				
			{{/each}}
		</tbody>
	</table>
	
	<div align = "center">
		<button type="button"><a href="new_clinic.html"></a>New Clinic</button>
		<button type="button"><a href="del_clinic.html"></a>Delete Clinic</button>
		<button type="button"><a href="edit_clinic.html"></a>Edit Clinic</button>
	</div>
	  
	<form action=".html" method="post">
		<fieldset align = "center">
			
			<label>Input Clinic ID for Employed Doctors: <input type="number" name="numerical_input"></label>
			<br />
			<input type="submit" value = "submit">
			
		</fieldset>
	</form>
		
</main>