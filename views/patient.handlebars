<main class="content">

	<table id="patient-table" align="center">
		<thead>
			<th>SSN</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Birthdate</th>
		<thead>
		<tbody>
			{{#each patient}}
				
				<tr class="patient-row">
					<td>{{SSN}}</td>
					<td>{{first_name}}</td>
					<td>{{last_name}}</td>
					<td>{{birthdate}}</td>
					<td class="delete"><button onclick="deletePatient({{SSN}})">Delete</button></td>
					<td class="update"><a href="/patient/{{SSN}}">Update</a></td>
				</tr>
				
			{{/each}}
		</tbody>
	</table>
	
	<br/>
	
	<h3>Add new patients (fix formatting and error handling):</h3>
	<form id="add-patient" action="/patient" method="post">
		SSN: <input type="int" name="SSN"><br>
		First name: <input type="text" name="first_name"><br>
		Last name: <input type="text" name="last_name"><br>
		Birthdate: <input type="date" name="birthdate"><br>
		<!--
		Homeworld: <select name="homeworld"> 
			{{#each doctor}}
				<option value="{{id}}">{{name}}</option>
			{{/each}}
		-->
		</select>
		<br>
		<input type="submit" value="Submit">
	</form>
	
	<br/>
	
	<div align = "center">
		<a href="patient_medication.html">Access Patients & Medications M:M</a>
	</div>

</main>