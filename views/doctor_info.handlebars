<form id="update-doctor" action="/doctor" method="post">
	First name: <input type="text" name="first_name" value="{{doctor.first_name}}"><br>
	Last name: <input type="text" name="last_name" value="{{doctor.last_name}}"><br>
	Clinic ID (make dropdown): <input type="int" name="C_ID" value="{{doctor.C_ID}}"><br>
</form>

<br/>
<button onclick="updateDoctor({{doctor.ID}})">Update</button>

