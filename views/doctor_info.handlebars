<h3>Add Existing Patient: </h3>

<form id="add-existing-patient" action="/doctor/add-existing-patient" method="post">
	<select name="SSN" id="patient-selector"> 
		{{#each not_patient}}
			<option value="{{SSN}}">{{first_name}} {{last_name}} ({{SSN}})</option>
		{{/each}}
	</select>
</form>

<br/>
<button onclick="addExistingPatient({{doctor.ID}})">Insert</button>

