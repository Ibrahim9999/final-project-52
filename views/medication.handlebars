<main class="content">

	<table id="medication-table" align="center">
		<thead>
			<th>ID</th>
			<th>Name</th>
			<th>Pregnancy Safe</th>
		<thead>
		<tbody>
			{{#each medicationArray}}
				
				<tr class="medication-row">
					<td>{{id}}</td>
					<td>{{name}}</td>
					<td>{{psafe}}</td>
				</tr>
				
			{{/each}}
		</tbody>
	</table>
	
	<div align = "center">
		<button type="button"><a href="new_medicine.html"></a>New Medicine</button>
		<button type="button"><a href="edit_medicine.html"></a>Edit Medicine</button>
		<button type="button"><a href="del_medicine.html"></a>Delete Medicine</button>
	</div>

	<form action=".html" method="post">
		<fieldset align = "center">
			
			<label>Input Medication ID for Patients with Prescriptions: <input type="number" name="numerical_input"></label>
			<br />
			<input type="submit" value = "submit">
			
		</fieldset>
	</form>
	
	<div align = "center">
		<a href="patient_medication.html">Access Patients & Medications M:M</a>
	</div>

</main>